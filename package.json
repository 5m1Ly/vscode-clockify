{
	"name": "clockify-tracker",
	"publisher": "tobiaswaelde",
	"displayName": "Clockify",
	"description": "Implements Clockify time tracker (https://clockify.me/) in VSCode",
	"version": "1.0.0",
	"icon": "assets/icon.ico",
	"galleryBanner": {
		"color": "#1840D0",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/custom-extensions/clockify-tracker.git"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "clockify-explorer",
					"title": "Clockify Explorer",
					"icon": "assets/icon.svg"
				}
			]
		},
		"views": {
			"clockify-explorer": [
				{
					"id": "clockify-workspaces",
					"name": "Workspaces"
				},
				{
					"id": "clockify-clients",
					"name": "Clients"
				},
				{
					"id": "clockify-projects",
					"name": "Projects"
				},
				{
					"id": "clockify-tasks",
					"name": "Tasks"
				},
				{
					"id": "clockify-tags",
					"name": "Tags"
				}
			]
		},
		"commands": [
			{
				"command": "extension.setApiKey",
				"title": "Set API key",
				"category": "Clockify"
			},
			{
				"command": "extension.selectWorkspace",
				"title": "Select Workspace",
				"category": "Clockify"
			},
			{
				"command": "extension.resetConfig",
				"title": "Reset Configuration",
				"category": "Clockify"
			},
			{
				"command": "extension.startTracking",
				"title": "Start Tracking",
				"category": "Clockify"
			},
			{
				"command": "extension.stopTracking",
				"title": "Stop Tracking",
				"category": "Clockify"
			},
			{
				"command": "clockify.workspaces.selection",
				"title": "Set Workspace",
				"category": "Clockify"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Clockify Tracker configuration",
			"properties": {
				"clockify.apiKey": {
					"type": "string",
					"default": "",
					"description": "The Clockify API Key"
				},
				"clockify.workspaceId": {
					"type": "string",
					"default": "",
					"description": "The ID of the workspace to use"
				},
				"clockify.autostartTracking": {
					"type": "boolean",
					"default": false,
					"description": "Start tracking with opening Visual Studio"
				},
				"clockify.autostopTracking": {
					"type": "boolean",
					"default": true,
					"description": "Stop tracking with closing Visual Studio"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"@types/lodash": "^4.14.138",
		"axios": "^0.19.0",
		"lodash": "^4.17.15",
		"moment": "^2.24.0"
	}
}
