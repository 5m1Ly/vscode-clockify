{
	"name": "clockify-tracker",
	"publisher": "tobiaswaelde",
	"displayName": "Clockify Tracker",
	"description": "Implements Clockify time tracker (https://clockify.me/) in VSCode",
	"version": "0.6.0",
	"icon": "./resources/logo.jpg",
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/custom-extensions/clockify-tracker.git"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:extension.setApiKey",
		"onCommand:extension.selectWorkspace",
		"onCommand:extension.resetConfig",
		"onCommand:extension.startTracking",
		"onCommand:extension.stopTracking"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.setApiKey",
				"title": "Clockify: Set API key"
			},
			{
				"command": "extension.selectWorkspace",
				"title": "Clockify: Select Workspace"
			},
			{
				"command": "extension.resetConfig",
				"title": "Clockify: Reset Configuration"
			},
			{
				"command": "extension.startTracking",
				"title": "Clockify: Start Tracking"
			},
			{
				"command": "extension.stopTracking",
				"title": "Clockify: Stop Tracking"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Clockify Tracker configuration",
			"properties": {
				"clockify.apiKey": {
					"type": "string",
					"default": "",
					"description": "The Clockify API Key"
				},
				"clockify.workspaceId": {
					"type": "string",
					"default": "",
					"description": "The ID of the workspace to use"
				},
				"clockify.autostartTracking": {
					"type": "boolean",
					"default": false,
					"description": "Start tracking with opening Visual Studio"
				},
				"clockify.autostopTracking": {
					"type": "boolean",
					"default": true,
					"description": "Stop tracking with closing Visual Studio"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"@types/lodash": "^4.14.138",
		"axios": "^0.19.0",
		"lodash": "^4.17.15"
	}
}
